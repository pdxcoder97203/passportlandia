<% include ../partials/header %> 

<h1 class='lead text-center'>Add a new stamp</h1>

<form class='form-group container text-center' action='/stamps' method='POST'>
    <input class='form-control mb-1'type='text' name='name' placeholder='Name of Stamp' required>
    <select class='form-control custom-select mb-1' name='hood' required>
        <option selected disabled>Neighborhood</option>
        <option value='N'>North (N)</option>
        <option value='NW'>Northwest (NW)</option>
        <option value='NE'>Northeast (NE)</option>
        <option value='SW'>Southwest (SW)</option>
        <option value='SE'>Southeast (SE)</option>
    </select>
    <input class='form-control mb-1' type='text' name='address' placeholder='Address (leave out city)' required>
    <input class='form-control mb-1' type='text' name='image' placeholder='Image (paste URL)' required>
    <input class='form-control mb-1 pb-5' type='text' name='description' placeholder='Description' required>
    <input class='form-control mb-1' type='text' name='question' placeholder='Question' required>
    <input class='form-control mb-1' type='text' name='answer' placeholder='Answer' required>
    <button class='btn btn-outline-primary'>Submit</button>
</form>

<div class='container'>
    <p>Having trouble creating a stamp? Click <a href='/help'>here</a> for help.</p>
</div>

